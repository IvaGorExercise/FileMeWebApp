<div class="container">
   <br />
   <br />
   <br />


@using (Html.BeginForm("UrediPitanje", "Manage", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    @Html.HiddenFor(model => model.ID_Pitanje)
    @Html.HiddenFor(model => model.Slika)
    @Html.HiddenFor(m => m.Email)
    @Html.HiddenFor(m => m.DatumPitanja)
 
    
    <div class="row">

        <div class="col-xs-12">
          @Html.ActionLink("<<< Natrag", "Pitanja", "Manage", new { @class = "linkNatrag"})
        </div>
        <br />

        <div class="widget wred col-xs-6">


            <div class="widget-head">

                <div class="pull-left">Uredi pitanje</div>
                <div class="clearfix"></div>
            </div>

            <div class="widget-content">
                <div class="padd">
                    <div class="editor-label">
                        @Html.LabelFor(model => model.Email)
                    </div>
                    <div class="editor-field">
                        @Html.DisplayFor(model => model.Email, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Email)
                    </div>

                    <div class="editor-label">
                        @Html.LabelFor(model => model.Ime)
                    </div>
                    <div class="editor-field">
                        @Html.TextBoxFor(model => model.Ime, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Ime)
                    </div>

                     <div class="editor-label">
                        @Html.LabelFor(model => model.Prezime)
                    </div>
                    <div class="editor-field">
                        @Html.TextBoxFor(model => model.Prezime, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Prezime)
                    </div>


                  

                 
                </div>
            </div>
        </div>

        <div class="widget wblue col-xs-3">
            <div class="widget-head">
                <div class="pull-left">Dodatno</div>
                <div class="clearfix"></div>
            </div>

            <div class="widget-content">
                <div class="padd">

                   <section class="checkbox">
                        <div class="editor-field">
                            @Html.EditorFor(model => model.Procitano)
                            @Html.ValidationMessageFor(model => model.Procitano)
                        </div>
                        <div class="editor-label">
                            @Html.LabelFor(model => model.Procitano)
                        </div>
                    </section>

                        <div class="editor-label">
                        @Html.LabelFor(model => model.DatumPitanja)
                    </div>
                    <div class="editor-field">
                        @Html.DisplayFor(model => model.DatumPitanja, new { @class = "form-control" })
                    </div>

                     <br />
                    <br />

                   @if (Model.Slika != null)
                    {
                        <a class="btn btn-default" href="@Model.Slika" target="_blank">Slika</a>
                    }

                </div>
            </div>
        </div>

        <div class="widget wviolet col-xs-3">
            <div class="widget-head">
                <div class="pull-left">Dodatno</div>
                <div class="clearfix"></div>
            </div>

            <div class="widget-content">
                <div class="padd">

                    <section class="checkbox">
                        <div class="editor-field">
                            @Html.EditorFor(model => model.Odgovoreno)
                            @Html.ValidationMessageFor(model => model.Odgovoreno)
                        </div>
                        <div class="editor-label">
                            @Html.LabelFor(model => model.Odgovoreno)
                        </div>
                    </section>
                        
                 
                     <div class="editor-label">
                        @Html.LabelFor(model => model.DatumOdgovora)
                    </div>
                    <div class="editor-field">
                        @Html.DisplayFor(model => model.DatumOdgovora, new { @class = "form-control" })
                    </div>

                       <div class="editor-field">
                        <div class="input-group">
                              @Html.TextBoxFor(model => model.DatumOdgovora, new { @class = "form-control" })
                        </div>
                        @Html.ValidationMessageFor(model => model.DatumOdgovora)

                    </div>
                </div>
            </div>
        </div>
    </div>
    

    <div class="row">
        <div class="widget wgreen col-xs-12">
            <div class="widget-head">
                <div class="pull-left">Sadržaj</div>
                <div class="clearfix"></div>
            </div>

            <div class="widget-content">

         <div class="padd">

                    <div class="editor-label">
                        @Html.LabelFor(model => model.Tag)
                    </div>
                    <div class="editor-field">
                        @Html.TextAreaFor(model => model.Tag, new { @class = "form-control col-xs-12" })
                        @Html.ValidationMessageFor(model => model.Tag)
                    </div>

                </div>


                <div class="padd">

                    <div class="editor-label">
                        @Html.LabelFor(model => model.PitanjeTekst)
                    </div>
                    <div class="editor-field">
                        @Html.TextAreaFor(model => model.PitanjeTekst, new { @class = "form-control col-xs-12" })
                        @Html.ValidationMessageFor(model => model.PitanjeTekst)
                    </div>

                </div>

                  <div class="padd">

                    <div class="editor-label">
                        @Html.LabelFor(model => model.Odgovor)
                    </div>
                    <div class="editor-field">
                        @Html.TextAreaFor(model => model.Odgovor, new { @class = "form-control col-xs-12" })
                        @Html.ValidationMessageFor(model => model.Odgovor)
                    </div>

                </div>

                   <div class="padd">

                    <div class="editor-label">
                        @Html.LabelFor(model => model.Komentar)
                    </div>
                    <div class="editor-field">
                        @Html.TextAreaFor(model => model.Komentar, new { @class = "form-control col-xs-12" })
                        @Html.ValidationMessageFor(model => model.Komentar)
                    </div>

                </div>

            </div>

            <br />
            <div class="widget-foot">
                <button type="submit" class="btn btn-primary"> Uredi</button>
                   <a href="/Manage/ObrisiPitanje/@Model.ID_Pitanje" class="btn btn-danger"> Obriši</a>
            </div>
        </div>

    </div>
}

  </div>


